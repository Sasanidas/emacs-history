+ 
  #undef LD_SWITCH_SYSTEM
! #define LD_SWITCH_SYSTEM -e start -Bstatic -L/usr/X11R5/lib
  
! #define C_SWITCH_SYSTEM -I/usr/X11R5/include
  #endif 
  
  /* Enable a fix in malloc.  */
*** 1.1	1992/02/20 20:37:34
--- ymakefile	1992/07/10 16:27:38
