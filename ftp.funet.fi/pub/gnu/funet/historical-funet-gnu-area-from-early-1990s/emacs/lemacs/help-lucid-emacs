(setq old-load-path load-path)

(defun loadup::add (path)
  (setq load-path (cons path load-path))
  )

(let* ((local-gnu "/srl/Lucid19/local"))
  (loadup::add (concat local-gnu "/VorTeX/"))
  (loadup::add (concat local-gnu "/SC-2.2/"))
