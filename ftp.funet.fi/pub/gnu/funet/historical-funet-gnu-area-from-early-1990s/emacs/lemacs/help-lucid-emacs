--- 2619,2625 ----
  x_focus_screen (s)
       struct screen *s;
  {
+ #ifdef MANAGE_FOCUS
    XWindowAttributes xwa;
    struct x_display* x;

***************
*** 2672,2677 ****
--- 2673,2679 ----
        XUngrabServer (XtDisplay (x->widget));
      }
    UNBLOCK_INPUT;
+ #endif /* MANAGE_FOCUS */
  }

  /* Destroy the X window of screen S.


